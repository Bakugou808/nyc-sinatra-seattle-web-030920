<h1><%= @figure.name %></h1>
<br>
<h1>Figure's Titles:</h1>
<%@figure.titles.each do |title|%>
    <%=title.name%><br>
<%end%>
<br>
<br>
<h1>Figure's Landmarks:</h1>
<%@figure.landmarks.each do |landmark|%>
    <%=landmark.name%><br>
    <%=landmark.year_completed%><br><br>
<%end%>
<br>
<br>
<h2>Delete Figure</h2>
<form action=<%="/figures/#{@figure.id}"%> method="POST">
<input type="hidden" name="_method" value="DELETE">
<input type="submit" value="Delete Figure">
</form> 