<form action=<%="/figures/#{@figure.id}"%> method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<p>Figure Name:</p> <h1><%=@figure.name%></h1>
<br>
<br>
<br>
<h1>Edit Current Titles</h1>
<br>
<br>
<%@titles.each do |title|%>
<p><%= title.name %> <input type="checkbox" name="figure[title_ids][]" id="<% title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>></p>
<%end%>
<br>
<br>
<br>
<h1>Create New Title:</h1>
<br>
<input type="text" name="figure[title][name]">
<br>
<br>
<h1>Edit Current Landmarks</h1>
<br>
<br>
<%@landmarks.each do |landmark|%>
<p><%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" id="<% landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>></p>
<%end%>
<br>
<br>
<br>
<h1>Create New Landmark:</h1>
<br>
<p>Enter Landmark Name</p><br>
<input type="text" name="figure[landmark][name]" >
<p>Enter Year Completed</p><br>
<input type="text" name="figure[landmark][year_completed]" ><input type="submit" value="Create New Figure">
</form>